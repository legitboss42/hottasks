generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum TaskStatus {
  OPEN
  CLAIMED
  SUBMITTED
  RELEASED
}

model Task {
  id           String     @id @default(cuid())
  title        String
  description  String
  reward       Int
  funded       Boolean    @default(false)
  status       TaskStatus @default(OPEN)
  creator      String
  claimant     String?
  claimedAt    DateTime?
  proofUrl     String?
  submittedAt  DateTime?
  releasedAt   DateTime?
  payoutItemId String?
  createdAt    DateTime   @default(now())
}
