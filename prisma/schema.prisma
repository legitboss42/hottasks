generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  Open
  Claimed
  Submitted
  Released
}

model Task {
  id           String     @id @default(cuid())
  title        String
  description  String
  reward       Int
  funded       Boolean    @default(false)
  status       TaskStatus @default(Open)
  claimant     String?
  payoutItemId String?
  createdAt    DateTime   @default(now())
}
